pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                echo 'Compile in progress'
                
                // Run the Maven build command
                sh 'mvn clean install'
                
                // Publish the HTML report generated by the Maven site plugin
                publishHTML([allowMissing: false, 
                             alwaysLinkToLastBuild: false, 
                             keepAll: false, 
                             reportDir: 'target/site',  // Change to your actual report directory
                             reportFiles: 'index.html', 
                             reportName: 'HTML_Report'])  // Name to display in Jenkins UI
            }
        }
    }
}
